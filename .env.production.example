# ============================================================
# Client Caller â€” Production Environment (.env)
# Copy to .env and fill in your values
# ============================================================

# Twilio Configuration
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# LLM Configuration (vLLM sidecar in docker-compose)
LLM_BASE_URL=http://vllm:8001/v1
LLM_API_KEY=EMPTY
LLM_MODEL=google/gemma-3-27b-it
LLM_MAX_TOKENS=256
LLM_TEMPERATURE=0.7

# TTS Configuration
# Options: "edge" (CPU/dev, free) or "csm" (GPU/prod, local inference)
TTS_ENGINE=csm
TTS_VOICE=en-US-AriaNeural
TTS_RATE=+0%

# GPU / Production
USE_GPU=true
HF_TOKEN=hf_xxxxxxxxxxxxxxxxxxxxxxxxxxxx
MAX_CONCURRENT_CALLS=10
CSM_SPEAKER_ID=0
CSM_MAX_CONTEXT_SEGMENTS=3
